@model IEnumerable<OnlineClients.Models.Pessoa>

@{
    ViewData["Title"] = "Cadastro de Pessoa";
}

<h2>Cadastro Online de Clientes</h2>

<hr />

<p>
    <a class="btn btn-primary" asp-action="Create">Novo Cliente</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Nome
            </th>
            <th>
                CPF/CNPJ
            </th>
            <th>
                Data de Nascimento
            </th>
            <th>
                Telefone
            </th>
            <th>
                E-mail
            </th>
            <th>#</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CpfCnpj)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataNascimento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                <a class="btn btn-primary btn-xs" asp-action="Edit" asp-route-id="@item.Idpessoa">Editar</a>
                <a class="btn btn-warning btn-xs" asp-action="Details" asp-route-id="@item.Idpessoa">Detalhes</a>
                <a class="btn btn-danger btn-xs" asp-action="Delete" asp-route-id="@item.Idpessoa">Remover</a>
            </td>
        </tr>
}
    </tbody>
</table>
